root = true

[*]
indent_style = tab
indent_size = 4
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.go]
max_line_length = 100

[*.md]
trim_trailing_whitespace = false

[*.{md,nix,yaml}]
indent_style = space
indent_size = 2
tab_width = 2
